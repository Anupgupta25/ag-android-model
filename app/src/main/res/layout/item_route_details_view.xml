<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.mm.product.client.route.ui.view.HKImageView
        android:id="@+id/dot_imageView"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/dot" />

    <com.mm.product.client.route.ui.view.HKTextView
        android:id="@+id/stop_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_toRightOf="@+id/dot_imageView"
        android:layout_marginLeft="40dp"
        android:textSize="22sp"
        android:adjustViewBounds="true"/>

    <com.mm.product.client.route.ui.view.HKImageView
        android:id="@+id/line_imageView"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/line"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/dot_imageView"
        android:layout_alignEnd="@+id/dot_imageView"
        android:layout_marginTop="18dp" />
</RelativeLayout>